<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/floralwhite"
    tools:context=".Restaurant_List">


    <ScrollView
        android:id="@+id/resraurantScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/barbqView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/oldlace"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/barbq_logo"
                    android:background="@color/oldlace"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/bar_b_q"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/navyblue"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sabrosoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/oldlace"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sabroso_logo"
                    android:background="@color/oldlace"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/sabroso"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/navyblue"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/nandosView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/oldlace"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/nandos_logo"
                    android:background="@color/oldlace"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/nandos"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/navyblue"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/takeoutView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/oldlace"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/takeout_logo"
                    android:background="@color/oldlace"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/takeout"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/navyblue"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/handiView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/oldlace"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/handi_logo"
                    android:background="@color/oldlace"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/handi"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/navyblue"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>